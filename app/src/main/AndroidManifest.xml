<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.bazouk.whosin">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme">

        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />

        <activity android:name="com.application.bazouk.whosin.connectionpages.ConnectionPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.application.bazouk.whosin.mainpages.ProfilePage"/>
        <activity android:name="com.application.bazouk.whosin.mainpages.MainPage"/>
        <activity android:name="com.application.bazouk.whosin.mainpages.AllTheGroupsPage"/>
        <activity android:name="com.application.bazouk.whosin.mainpages.NotificationPage"/>
        <activity android:name="com.application.bazouk.whosin.groupes.PresenceGroup"/>
        <activity android:name="com.application.bazouk.whosin.groupes.ShareGroup"/>

    </application>

</manifest>